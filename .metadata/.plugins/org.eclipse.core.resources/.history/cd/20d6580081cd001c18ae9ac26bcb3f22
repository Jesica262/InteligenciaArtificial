package frsf.cidisi.exercise.plantsVsZombies.search;

import frsf.cidisi.faia.agent.search.GoalTest;
import frsf.cidisi.faia.state.AgentState;

public class ObjetivoPlanta extends GoalTest {

    @Override
    public boolean isGoalState(AgentState agentState) {
    	
    	EstadoPlanta estadoPlanta = (EstadoPlanta) agentState;
    	int col = estadoPlanta.getColumnPosition();
    	
    	//System.out.println(" \n ---- "+(estadoPlanta.getContadorZombie())+" .. "+
    //	estadoPlanta.getCantidadSol()+" ..conocido "+estadoPlanta.getMatriz().length+"\n");
    	//(((estadoPlanta.getCeldasVisitadas()-1) == estadoPlanta.getMatriz()[1].length)
    	
    	return ((estadoPlanta.getContadorZombie() == 2) && estadoPlanta.getCantidadSol()>0 );
    	//ver total de zombies en la grilla
    }
}

